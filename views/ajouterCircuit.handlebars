<h1> Ajouter un circuit </h1>

<form action="#" method="POST">
  <div class="row">
    <label class="auto" for="Nom">Nom</label>
    <input class="auto" type="text" name="nom" id="Nom" />
  </div>
  <div class="row">
    <label class="auto" for="Longueur">Longueur</label>
    <input class="auto" type="text" name="long" id="Long" /> m
  </div>
  <div class="row">
    <label class="auto" for="Pays">Pays</label>
    <select class="auto" name="pays">

    </select>
  </div>
  <div class="row">
    <label class="auto" for="Image">Images</label>
    <input type="file" id="img" name="img" accept="image/png, image/jpeg, image/jpg, image/gif">
  </div>
  <div class="row">
    <label class="auto" for="Personne">Nombre de spectateurs</label>
    <input class="auto" type="number" name="personne" id="Personne" /> personnes
  </div>
  <div class="row">
    <label class="auto" for="Desc">Description</label>
    <textarea name="desc" rows="8" cols="80"></textarea>
  </div>

  <button type="submit" name="valider">AJOUTER</button>
</form>
