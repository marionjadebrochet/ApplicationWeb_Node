<h1> Gestion des Circuits </h1>
<a href="/ajouterCircuit/"><img src="/image/act_add.png"><p>Ajouter un circuit</p></a>

<table>
      <tr>
        <th>Nom</th>
        <th>Longueur</th>
        <th>Nombre de spéctateurs</th>
        <th>Actions</th>
      </tr>
      {{#each listeCircuit}}
        <tr>
            <td>{{nom}}</td>
            <td>{{longu}}</td>
            <td>{{nbrSpec}} </td>
            <td><a href="/modifierCircuit/{{num}}"><img src="/image/act_edit.png"><p>Modifier</p></a>
              <a href="/supprimerCircuit/{{num}}{{#ifCond gpnum '==' NULL}}{{else}}/{{gpnum}}{{/ifCond}}"><img src="/image/act_delete.png"><p>Supprimer</p></a></td>
        </tr>
      {{/each}}
</table>

{{#if est_supprime}}
<script type="text/javascript">
  $(document).ready(function() {
    alert("Le circuit a bien été supprimé");
    document.location.href="/listerCircuits";
  });
</script>
{{/if}}

{{#if est_ajoute}}
<script type="text/javascript">
  $(document).ready(function() {
    alert("Le circuit a bien été ajouté !");
    document.location.href="/listerCircuits";
  });
</script>
{{/if}}

{{#if est_modifie}}
<script type="text/javascript">
  $(document).ready(function() {
    alert("Le circuit  a bien été modifié");
    document.location.href="/listerCircuits";
  });
</script>
{{/if}}
